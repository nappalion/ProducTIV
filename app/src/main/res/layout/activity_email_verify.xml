<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_red"
    tools:context=".activities.EmailVerifyActivity">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="120sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="120sp"
        android:background="@drawable/textbox_white_fill"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivEmail"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:src="@drawable/pink_email_icon" />

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please verify your email"
            android:textColor="@color/light_red"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="You're almost there! We sent an email to"
            android:textColor="@color/light_red" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/light_red"
            android:textStyle="bold"
            android:textSize="17sp"
            tools:text="example113@yahoo.com" />

        <TextView
            android:id="@+id/tvTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:text="Just click on the link in that email to"
            android:textColor="@color/light_red" />

        <TextView
            android:id="@+id/tvThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="complete your signup. If you don't see it, you"
            android:textColor="@color/light_red" />

        <LinearLayout
            android:id="@+id/tvContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="may need to "
                android:textColor="@color/light_red" />

            <TextView
                android:id="@+id/tvFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="check your spam"
                android:textColor="@color/light_red"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" folder."
                android:textColor="@color/light_red" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvSeven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:text="Still can't find the email?"
            android:textColor="@color/light_red" />

        <Button
            android:id="@+id/btnResendEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_red"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:text="Resend Email"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/contactContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvEight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need help?"
                android:textColor="@color/light_red"/>

            <Button
                android:id="@+id/btnContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:minWidth="0sp"
                android:minHeight="0sp"
                android:padding="0sp"
                android:text="Contact Us"
                android:textSize="12sp"
                android:textColor="@color/light_red"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>